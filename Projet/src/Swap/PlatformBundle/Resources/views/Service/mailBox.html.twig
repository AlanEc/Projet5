{% extends "SwapPlatformBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Index{% endblock %}

{% block body %}
	{% for message in listMessage %}
		<div class="row">
			<div class="col-md-offset-3 col-md-3 ">
				<div class="panel panel-default">
					{{ message.content }}
					<a href="{{ path('swap_message_conversation', { 'idMessage': message.id, 'recipientId': message.author.id }) }}">
					<button id="boutonProfil" class="btn btn-primary text-center col-md-12">Envoyer un message</button>
				</a>
				</div>
			</div>
		</div>
	{% endfor %}
{% endblock %}